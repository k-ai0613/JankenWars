{
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "build", "**/*.test.ts", "client/**/*"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "module": "Node16",
    "target": "ES2022",
    "strict": true,
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "noImplicitAny": false
  }
}
